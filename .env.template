# Quantum Image Retrieval System - Environment Variables
# Copy this file to .env and fill in your actual values

# === Azure Cosmos DB Configuration ===
COSMOS_ENDPOINT=https://quantum-cosmos-central.documents.azure.com:443/
COSMOS_KEY=your_cosmos_key_here
COSMOS_DATABASE=quantum-images
COSMOS_CONTAINER=feature-vectors

# === Azure Storage Configuration (if needed) ===
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string_here

# === Application Configuration ===
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_PORT=8000

# === Security ===
SECRET_KEY=your_secret_key_here

# === Feature Extraction ===
FEATURE_DIM=8
MODEL_NAME=resnet50

# === Quantum Algorithm ===
N_ENCODING_QUBITS=3
N_AUXILIARY_QUBITS=7
USE_QUANTUM_INSPIRED=true

# === Performance ===
BATCH_SIZE=32
MAX_DATASET_SIZE=1000
SIMILARITY_THRESHOLD=0.93
